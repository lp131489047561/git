.footer {
	z-index: -1;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	position: fixed;
    left: 0;
    bottom: 0;
	width: 750rpx;
	height: 109rpx;
	background: #fff;
	border-top: 1px solid #d2d2d2;
}
.footer .item-box {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.footer .item-box image {
	width: 46rpx;
	height: 46rpx;
	
}
.footer .item-box .foot-text{
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 18rpx;
	color: #909092;
}