.shade {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	width: 750rpx;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
}
.hide {
	display: none;
}
.show {
	display: block;
	position: fixed;
}
.window-hint {
	position: fixed;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 500rpx;
	height: 300rpx;
	background: #fff;
	border: 1px solid #ccc;
	border-radius: 10rpx 10rpx 10rpx 10rpx;
}
.window-hint .hint {
	width: 500rpx;
	height: 200rpx;
	text-align: center;
	line-height:200rpx;
}
.window-hint .select {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	width: 500rpx;
	height: 80rpx;
	font-size: 26rpx;
}
.window-hint .look-btn,.login-btn{
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 80rpx;
	background: #ddd;
}